    "version": "0.0.1",
    "dependencies": {
        "unix-dgram": ">=0.0.3",
        "monitr": "*",
        "mkdirp": ">=0.3.5"
    },
    "devDependencies": {
        "ytestrunner": "*",
        "yuitest": "*",
        "jshint": "~0.9.0",
        "istanbul": "~0.1.27"
    },
    "main": "./lib/index.js",
    "scripts": {
